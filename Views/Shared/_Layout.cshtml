<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Dpopfood Dashboard</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha512-Fo3rlalDLsjhfrAaWE1Wj3Tz3p8e/3Fw3kY9B+XW1+B6G+GqN/p7K4z1P7kLgR5C3n2B9/b5M5+tA9K8xQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <div class="d-flex flex-column flex-lg-row wrapper">
        <header class="sidebar d-flex flex-column justify-content-between px-3 pt-3 text-white bg-dark">
            <a href="/" class="d-flex align-items-center mb-5 mb-md-0 text-white text-decoration-none justify-content-center">
                <img src="~/images/logo/logo.svg" alt="Logo" class="logo img-fluid" />
                <span class="fs-4 ms-2">DevBurguer</span>
            </a>
            <ul class="nav nav-pills flex-column gap-3">
                <li class="nav-item">
                    <a href="/" class="nav-link active" aria-current="page">
                        Home
                    </a>
                </li>
                <li>
                    <a class="nav-link" asp-area="" asp-controller="Snacks" asp-action="Create">
                        Cadastrar Lanches
                    </a>
                </li>
                <li>
                    <a class="nav-link" asp-area="" asp-controller="Snacks" asp-action="Index">
                        Menu
                    </a>
                </li>
            <partial name="_LoginPartial"  />
            </ul>
            <div class="w-100 d-flex justify-content-center">
                <img src="~/images/chef-3d-character.png" alt="Chef Avatar" style="max-width: 250px;" />
            </div>
            @* <div class="sidebar-bottom text-center">
                <p class="mb-1">Try all feature!</p>
                <button class="btn btn-warning w-100">Upgrade plan</button>
            </div> *@
        </header>

        <div class="main-content flex-grow-1 p-3">
            <header class="navbar-top p-0 d-flex justify-content-between align-items-center">
                <div class="dashboard-activity fs-5 fw-bold">Dashboard Activity</div>
                <div class="input-group search-bar w-25">
                    <input type="text" class="form-control rounded-pill" placeholder="Search" aria-label="Search">
                </div>
                <div class="header-right d-flex align-items-center">
                    <span class="date-time me-3 text-muted" id="data-e-hora-atual"></span>
                    <i class="fas fa-bell notification-icon me-3 fs-5"></i>
                    <img src="~/images/profile/user.png" alt="User Avatar" class="user-avatar rounded-circle"/>
                </div>
            </header>

            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/dashboard.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        // Função para atualizar a data e a hora
        function atualizarDataHora() {
            const spanDataHora = document.getElementById('data-e-hora-atual');
            const agora = new Date();

            // Formata a data e a hora como desejar
            // Para um formato mais localizado e legível (Português do Brasil):
            const opcoes = {
                year: 'numeric',    // Ex: 2025
                month: 'long',      // Ex: maio
                day: 'numeric',     // Ex: 28
                hour: '2-digit',    // Ex: 20
                minute: '2-digit',  // Ex: 49
                second: '2-digit',  // Ex: 06
                hour12: false       // Usa formato 24 horas
            };
            const dataHoraFormatada = agora.toLocaleDateString('pt-BR', opcoes);

            spanDataHora.textContent = dataHoraFormatada;
        }

        // Chama a função uma vez quando a página carrega
        atualizarDataHora();

        // Opcional: atualiza a data e a hora a cada segundo (ou outro intervalo)
        // se você quiser que ela seja "ao vivo"
        setInterval(atualizarDataHora, 1000); // Atualiza a cada 1000 milissegundos (1 segundo)
    </script>
</body>
</html>






